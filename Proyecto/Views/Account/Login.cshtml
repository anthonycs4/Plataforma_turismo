@{
    ViewBag.Title = "Login";
}
<style>
    .custom-btn {
        padding: 10px 20px;
        font-size: 18px;
        color: white;
        background-color: #8C0042; /* Burdeos */
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .custom-btn:hover {
            background-color: #4A0D50; /* Morado oscuro */
        }

    .color1 {
        background-color: #4A0D50; /* Morado oscuro */
    }

    .container {
        transform-style: preserve-3d;
        perspective: 1000px;
    }

    .pane {
        outline: 2px solid #BF0044;
        box-shadow: 0 0 10px #BF0044, inset 0 0 10px black;
        height: 1cm;
        width: 3cm;
        border-radius: 5px;
        position: relative;
        overflow: hidden;
        transition: 0.7s ease;
    }

    .input {
        display: none;
    }

    .label {
        height: 1cm;
        width: 1.5cm;
        float: left;
        font-weight: 600;
        letter-spacing: -1px;
        font-size: 14px;
        padding: 0px;
        position: relative;
        z-index: 1;
        color: #4A0D50;
        text-align: center;
        padding-top: 10px;
    }

    .selection {
        display: none;
        position: absolute;
        height: 1cm;
        width: calc(3cm / 2);
        z-index: 0;
        left: 0;
        top: 0;
        box-shadow: 0 0 10px #4A0D50;
        transition: .15s ease;
    }

    .label:has(input:checked) {
        color: white;
    }

        .label:has(input:checked) ~ .selection {
            background-color: #8C0042;
            display: inline-block;
        }

    .label:nth-child(1):has(input:checked) ~ .selection {
        transform: translateX(calc(3cm * 0/2));
    }

    .label:nth-child(2):has(input:checked) ~ .selection {
        transform: translateX(calc(3cm * 1/2));
    }
</style>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Inicio de Sesión</h2>
            <div class="card">
                <div class="card-header color1 text-white">
                    <h5 class="card-title">Ingrese sus credenciales</h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label for="email" class="form-label">Correo Electrónico</label>
                            <input type="email" class="form-control" id="email" placeholder="nombre@ejemplo.com">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Contraseña</label>
                            <input type="password" class="form-control" id="password" placeholder="Contraseña">
                        </div>

                        <!-- Barra de selección para "Viajero" o "Socio" -->
                        <div class="container">
                            <div class="pane">
                                <label class="label">
                                    <span>Viajero</span>
                                    <input id="viajero" class="input" name="radio" type="radio">
                                </label>
                                <label class="label">
                                    <span>Socio</span>
                                    <input id="socio" class="input" checked="checked" name="radio" type="radio">
                                </label>
                                <span class="selection"></span>
                            </div>
                        </div>

                        <div class="mt-4">                                                                                                                                                                                                                                                                                                              
                            <button type="button" class="btn custom-btn w-100" onclick="window.location.href='/Socio/Dashboard'">Iniciar Sesión</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
